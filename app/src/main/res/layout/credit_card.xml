<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/img_credit_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="316:185"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unknown_item" />

    <TextView
        android:id="@+id/txt_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/roboto"
        android:text="John Doe"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_credit_card"
        app:layout_constraintEnd_toEndOf="@+id/img_credit_card"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/img_credit_card"
        app:layout_constraintTop_toTopOf="@+id/img_credit_card"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:id="@+id/txt_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="@font/roboto"
        android:text="1234 **** **** **** ****"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_credit_card"
        app:layout_constraintStart_toStartOf="@+id/img_credit_card"
        app:layout_constraintTop_toTopOf="@+id/img_credit_card"
        app:layout_constraintVertical_bias="0.863" />

    <TextView
        android:id="@+id/txt_card_exp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/roboto"
        android:text="09/25"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_credit_card"
        app:layout_constraintEnd_toEndOf="@+id/img_credit_card"
        app:layout_constraintTop_toTopOf="@+id/img_credit_card"
        app:layout_constraintVertical_bias="0.863" />

    <ImageView
        android:id="@+id/delete_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/img_credit_card"
        app:layout_constraintEnd_toEndOf="@+id/img_credit_card"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="@+id/img_credit_card"
        app:layout_constraintTop_toTopOf="@+id/img_credit_card"
        app:layout_constraintVertical_bias="0.602"
        app:srcCompat="@drawable/ic_options" />
</androidx.constraintlayout.widget.ConstraintLayout>